# Production environment variables for QALab
# Copy this file to .env on your production server and fill in the values

# Server configuration
DEPLOY_SERVER=your-server.example.com
DEPLOY_USER=deploy
DATABASE_HOST=  # Leave blank to use local PostgreSQL, or set to RDS endpoint

# Database configuration
QALAB_DATABASE_PASSWORD=your-secure-database-password
DATABASE_USERNAME=qalab
DATABASE_NAME=qalab_production

# Email configuration (required for user invitations)
SMTP_ADDRESS=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
MAILER_HOST=your-server.example.com

# Rails configuration
RAILS_ENV=production
RAILS_LOG_LEVEL=info
RAILS_MAX_THREADS=5

# Optional: Custom SSH settings
# DEPLOY_SSH_KEY=~/.ssh/id_rsa
# DEPLOY_SSH_PORT=22
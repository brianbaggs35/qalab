<% content_for :title, "Sign up" %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary/10 via-base-200 to-secondary/10">
  <div class="card w-full max-w-md shadow-2xl bg-base-100">
    <div class="card-body">
      <div class="text-center mb-6">
        <h1 class="text-3xl font-bold text-primary">Join QA Lab</h1>
        <p class="text-base-content/60 mt-2">Create your account to get started</p>
      </div>

      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), local: true, html: { class: "space-y-4" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="grid grid-cols-2 gap-4">
          <div class="form-control">
            <%= f.label :first_name, class: "label" do %>
              <span class="label-text font-medium">First name</span>
            <% end %>
            <%= f.text_field :first_name, autocomplete: "given-name", class: "input input-bordered w-full", placeholder: "John", required: true %>
          </div>

          <div class="form-control">
            <%= f.label :last_name, class: "label" do %>
              <span class="label-text font-medium">Last name</span>
            <% end %>
            <%= f.text_field :last_name, autocomplete: "family-name", class: "input input-bordered w-full", placeholder: "Doe", required: true %>
          </div>
        </div>

        <div class="form-control">
          <%= f.label :email, class: "label" do %>
            <span class="label-text font-medium">Email address</span>
          <% end %>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input input-bordered w-full", placeholder: "john@example.com", required: true %>
        </div>

        <div class="form-control">
          <%= f.label :password, class: "label" do %>
            <span class="label-text font-medium">Password</span>
            <span class="label-text-alt">Minimum 12 characters</span>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "input input-bordered w-full", placeholder: "••••••••••••", required: true %>
        </div>

        <div class="form-control">
          <%= f.label :password_confirmation, class: "label" do %>
            <span class="label-text font-medium">Confirm password</span>
          <% end %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "input input-bordered w-full", placeholder: "••••••••••••", required: true %>
        </div>

        <div class="form-control mt-6">
          <%= f.submit "Create account", class: "btn btn-primary w-full" %>
        </div>
      <% end %>

      <div class="divider">or</div>

      <div class="text-center space-y-2">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>

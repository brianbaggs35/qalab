<% content_for :title, "Test Cases" %>
<% content_for :breadcrumbs do %>
  <li>Manual Testing</li>
  <li class="text-secondary font-semibold">Test Cases</li>
<% end %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-3xl font-bold text-secondary">Manual Test Cases</h1>
      <p class="text-base-content/70 mt-1">Create and manage your manual testing scenarios</p>
    </div>
    <div class="flex gap-2">
      <%= link_to new_manual_testing_test_case_path, 
          class: "btn btn-secondary gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        New Test Case
      <% end %>
    </div>
  </div>

  <!-- Filters and Search -->
  <div class="card bg-base-100 shadow-sm">
    <div class="card-body">
      <div class="flex flex-col lg:flex-row gap-4">
        <!-- Search -->
        <div class="flex-1">
          <div class="form-control">
            <div class="input-group">
              <input type="text" placeholder="Search test cases..." class="input input-bordered flex-1">
              <button class="btn btn-square btn-secondary">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="m21 21-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
                </svg>
              </button>
            </div>
          </div>
        </div>

        <!-- Filters -->
        <div class="flex gap-2">
          <select class="select select-bordered">
            <option>All Priorities</option>
            <option>High</option>
            <option>Medium</option>
            <option>Low</option>
          </select>
          
          <select class="select select-bordered">
            <option>All Statuses</option>
            <option>Draft</option>
            <option>Ready</option>
            <option>In Review</option>
            <option>Approved</option>
          </select>

          <select class="select select-bordered">
            <option>All Categories</option>
            <option>Functional</option>
            <option>UI/UX</option>
            <option>Integration</option>
            <option>Performance</option>
          </select>
        </div>
      </div>
    </div>
  </div>

  <!-- Stats Cards -->
  <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
    <div class="stat bg-base-100 shadow-sm rounded-lg">
      <div class="stat-figure text-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
      </div>
      <div class="stat-title">Total Cases</div>
      <div class="stat-value text-secondary"><%= @stats[:total] %></div>
      <div class="stat-desc"><%= @stats[:total] == 0 ? 'No test cases yet' : 'Created test cases' %></div>
    </div>

    <div class="stat bg-base-100 shadow-sm rounded-lg">
      <div class="stat-figure text-info">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
      </div>
      <div class="stat-title">Draft</div>
      <div class="stat-value text-info"><%= @stats[:draft] %></div>
      <div class="stat-desc">Being created</div>
    </div>

    <div class="stat bg-base-100 shadow-sm rounded-lg">
      <div class="stat-figure text-success">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="stat-title">Ready</div>
      <div class="stat-value text-success"><%= @stats[:ready] %></div>
      <div class="stat-desc">Ready for testing</div>
    </div>

    <div class="stat bg-base-100 shadow-sm rounded-lg">
      <div class="stat-figure text-warning">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
        </svg>
      </div>
      <div class="stat-title">Approved</div>
      <div class="stat-value text-warning"><%= @stats[:approved] %></div>
      <div class="stat-desc">Production ready</div>
    </div>
  </div>

  <!-- Test Cases Table -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <div class="flex items-center justify-between mb-4">
        <h2 class="card-title text-xl">Test Cases</h2>
        <div class="text-sm text-base-content/60">
          Showing <%= @test_cases.size %> of <%= @stats[:total] %> test cases
        </div>
      </div>

      <% if @test_cases.any? %>
        <!-- Test Cases List -->
        <div class="space-y-4">
          <% @test_cases.each do |test_case| %>
            <div class="card bg-base-200 hover:bg-base-300 transition-colors">
              <div class="card-body p-6">
                <div class="flex items-start justify-between">
                  <div class="flex-1">
                    <div class="flex items-start gap-3">
                      <div class="flex-1">
                        <h3 class="card-title text-lg">
                          <%= link_to test_case.title, manual_testing_test_case_path(test_case), 
                              class: "hover:text-primary transition-colors" %>
                        </h3>
                        <% if test_case.description.present? %>
                          <p class="text-base-content/70 mt-2 line-clamp-2">
                            <%= truncate(test_case.description, length: 120) %>
                          </p>
                        <% end %>
                      </div>
                    </div>
                    
                    <div class="flex flex-wrap items-center gap-2 mt-4">
                      <!-- Priority Badge -->
                      <div class="badge <%= test_case.priority_badge_class %> gap-2">
                        <% case test_case.priority %>
                        <% when 'critical' %>
                          üî¥
                        <% when 'high' %>
                          üü†
                        <% when 'medium' %>
                          üü°
                        <% when 'low' %>
                          üü¢
                        <% end %>
                        <%= test_case.priority.humanize %>
                      </div>
                      
                      <!-- Status Badge -->
                      <div class="badge <%= test_case.status_badge_class %>">
                        <%= test_case.status.humanize %>
                      </div>
                      
                      <!-- Category -->
                      <div class="badge badge-outline">
                        <%= test_case.category.humanize %>
                      </div>
                      
                      <!-- Steps count -->
                      <div class="badge badge-ghost">
                        <%= test_case.steps_list.size %> step<%= 's' unless test_case.steps_list.size == 1 %>
                      </div>
                      
                      <!-- Duration -->
                      <% if test_case.estimated_duration.present? %>
                        <div class="badge badge-ghost">
                          ‚è±Ô∏è <%= test_case.estimated_duration %>min
                        </div>
                      <% end %>
                    </div>
                  </div>
                  
                  <div class="flex items-center gap-2 ml-4">
                    <%= link_to manual_testing_test_case_path(test_case), 
                        class: "btn btn-ghost btn-sm", title: "View" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                      </svg>
                    <% end %>
                    
                    <%= link_to edit_manual_testing_test_case_path(test_case), 
                        class: "btn btn-ghost btn-sm", title: "Edit" do %>
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                      </svg>
                    <% end %>
                    
                    <div class="dropdown dropdown-end">
                      <div tabindex="0" role="button" class="btn btn-ghost btn-sm">
                        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01" />
                        </svg>
                      </div>
                      <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-52">
                        <li>
                          <%= link_to manual_testing_test_case_path(test_case) do %>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2v0M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2" />
                            </svg>
                            Duplicate
                          <% end %>
                        </li>
                        <li>
                          <%= link_to manual_testing_test_case_path(test_case), 
                              method: :delete,
                              class: "text-error",
                              confirm: "Are you sure you want to delete '#{test_case.title}'?" do %>
                            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                            </svg>
                            Delete
                          <% end %>
                        </li>
                      </ul>
                    </div>
                  </div>
                </div>
                
                <!-- Tags -->
                <% if test_case.tag_list.any? %>
                  <div class="flex flex-wrap gap-1 mt-3">
                    <% test_case.tag_list.each do |tag| %>
                      <span class="badge badge-sm badge-outline"><%= tag %></span>
                    <% end %>
                  </div>
                <% end %>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <% if @test_cases.respond_to?(:current_page) && @test_cases.total_pages > 1 %>
          <div class="flex justify-center mt-8">
            <%= paginate @test_cases, theme: 'twitter_bootstrap_4' %>
          </div>
        <% end %>
      <% else %>
        <!-- Empty State -->
        <div class="text-center py-16">
          <div class="text-6xl mb-4">üìù</div>
          <h3 class="text-xl font-semibold text-base-content/80 mb-2">No Test Cases Yet</h3>
          <p class="text-base-content/60 mb-6">Create your first manual test case to get started</p>
          <%= link_to new_manual_testing_test_case_path, 
              class: "btn btn-secondary gap-2" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
            </svg>
            Create Test Case
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
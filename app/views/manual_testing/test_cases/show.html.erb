<% content_for :title, @test_case.title %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-3xl font-bold text-primary"><%= @test_case.title %></h1>
      <div class="flex flex-wrap items-center gap-2 mt-2">
        <!-- Priority Badge -->
        <div class="badge <%= @test_case.priority_badge_class %> gap-2">
          <% case @test_case.priority %>
          <% when 'critical' %>
            üî¥
          <% when 'high' %>
            üü†
          <% when 'medium' %>
            üü°
          <% when 'low' %>
            üü¢
          <% end %>
          <%= @test_case.priority.humanize %>
        </div>
        
        <!-- Status Badge -->
        <div class="badge <%= @test_case.status_badge_class %>">
          <%= @test_case.status.humanize %>
        </div>
        
        <!-- Category -->
        <div class="badge badge-outline">
          <%= @test_case.category.humanize %>
        </div>
        
        <% if @test_case.estimated_duration.present? %>
          <div class="badge badge-ghost">
            ‚è±Ô∏è <%= @test_case.estimated_duration %>min
          </div>
        <% end %>
      </div>
    </div>
    
    <div class="flex gap-2">
      <%= link_to edit_manual_testing_test_case_path(@test_case), 
          class: "btn btn-primary gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit
      <% end %>
      
      <%= link_to manual_testing_test_cases_path, 
          class: "btn btn-ghost gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
        </svg>
        Back to Test Cases
      <% end %>
    </div>
  </div>

  <!-- Test Case Content -->
  <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-6">
      <!-- Description -->
      <% if @test_case.description.present? %>
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h3 class="card-title text-lg">Description</h3>
            <div class="prose prose-sm max-w-none">
              <%= simple_format(@test_case.description) %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Preconditions -->
      <% if @test_case.preconditions.present? %>
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h3 class="card-title text-lg flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              Preconditions
            </h3>
            <div class="prose prose-sm max-w-none">
              <%= simple_format(@test_case.preconditions) %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Test Steps -->
      <% if @test_case.steps_list.any? %>
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h3 class="card-title text-lg flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
              </svg>
              Test Steps
            </h3>
            <div class="space-y-3">
              <% @test_case.steps_list.each_with_index do |step, index| %>
                <div class="flex items-start gap-3 p-4 bg-base-200 rounded-lg">
                  <div class="flex items-center justify-center w-8 h-8 bg-primary text-primary-content rounded-full text-sm font-bold flex-shrink-0">
                    <%= index + 1 %>
                  </div>
                  <div class="flex-1">
                    <p class="text-base-content"><%= step %></p>
                  </div>
                  <div class="form-control">
                    <label class="label cursor-pointer">
                      <input type="checkbox" class="checkbox checkbox-primary" />
                    </label>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Expected Results -->
      <% if @test_case.expected_results.present? %>
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h3 class="card-title text-lg flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
              </svg>
              Expected Results
            </h3>
            <div class="prose prose-sm max-w-none">
              <%= simple_format(@test_case.expected_results) %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Notes -->
      <% if @test_case.notes.present? && @test_case.notes.is_a?(Hash) && @test_case.notes.any? %>
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h3 class="card-title text-lg flex items-center gap-2">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 8h10M7 12h4m1 8l-4-4H5a2 2 0 01-2-2V6a2 2 0 012-2h14a2 2 0 012 2v8a2 2 0 01-2 2h-3l-4 4z" />
              </svg>
              Notes
            </h3>
            <div class="prose prose-sm max-w-none">
              <%= @test_case.notes %>
            </div>
          </div>
        </div>
      <% end %>
    </div>

    <!-- Sidebar -->
    <div class="space-y-6">
      <!-- Test Case Info -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h3 class="card-title text-lg">Test Case Information</h3>
          <div class="space-y-4">
            <div>
              <label class="text-sm font-semibold text-base-content/70">Created by</label>
              <p class="text-base-content"><%= @test_case.user.full_name %></p>
            </div>
            
            <div>
              <label class="text-sm font-semibold text-base-content/70">Organization</label>
              <p class="text-base-content"><%= @test_case.organization.name %></p>
            </div>
            
            <div>
              <label class="text-sm font-semibold text-base-content/70">Created</label>
              <p class="text-base-content"><%= @test_case.created_at.strftime("%B %d, %Y") %></p>
            </div>
            
            <div>
              <label class="text-sm font-semibold text-base-content/70">Last Updated</label>
              <p class="text-base-content"><%= time_ago_in_words(@test_case.updated_at) %> ago</p>
            </div>
            
            <% if @test_case.steps_list.any? %>
              <div>
                <label class="text-sm font-semibold text-base-content/70">Steps</label>
                <p class="text-base-content"><%= pluralize(@test_case.steps_list.size, 'step') %></p>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Tags -->
      <% if @test_case.tag_list.any? %>
        <div class="card bg-base-100 shadow-xl">
          <div class="card-body">
            <h3 class="card-title text-lg">Tags</h3>
            <div class="flex flex-wrap gap-2">
              <% @test_case.tag_list.each do |tag| %>
                <span class="badge badge-outline"><%= tag %></span>
              <% end %>
            </div>
          </div>
        </div>
      <% end %>

      <!-- Actions -->
      <div class="card bg-base-100 shadow-xl">
        <div class="card-body">
          <h3 class="card-title text-lg">Actions</h3>
          <div class="space-y-2">
            <%= link_to edit_manual_testing_test_case_path(@test_case), 
                class: "btn btn-primary btn-sm w-full gap-2" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
              </svg>
              Edit Test Case
            <% end %>
            
            <%= link_to "#", 
                class: "btn btn-outline btn-sm w-full gap-2" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7v8a2 2 0 002 2h6M8 7V5a2 2 0 012-2h4.586a1 1 0 01.707.293l4.414 4.414a1 1 0 01.293.707V15a2 2 0 01-2 2v0M8 7H6a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2v-2" />
              </svg>
              Duplicate
            <% end %>
            
            <%= link_to manual_testing_test_case_path(@test_case), 
                method: :delete,
                class: "btn btn-error btn-sm w-full gap-2",
                confirm: "Are you sure you want to delete this test case?" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
              </svg>
              Delete
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<% content_for :title, "Test Suites" %>
<% content_for :breadcrumbs do %>
  <li>Manual Testing</li>
  <li class="text-secondary font-semibold">Test Suites</li>
<% end %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
    <div>
      <h1 class="text-3xl font-bold text-secondary">Test Suites</h1>
      <p class="text-base-content/70 mt-1">Organize your test cases into manageable suites</p>
    </div>
    <div class="flex gap-2">
      <%= link_to new_manual_testing_test_suite_path, 
          class: "btn btn-secondary gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
        </svg>
        Create Test Suite
      <% end %>
      <%= link_to manual_testing_test_cases_path, 
          class: "btn btn-outline gap-2" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
        </svg>
        View All Test Cases
      <% end %>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-4 gap-6">
    <!-- Test Suites List -->
    <div class="lg:col-span-4">
      <% if @test_suites.any? %>
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
          <% @test_suites.each do |test_suite| %>
            <div class="card bg-base-100 shadow-md hover:shadow-lg transition-shadow border border-base-300">
              <div class="card-body p-6">
                <div class="flex items-start justify-between mb-4">
                  <div class="flex-1">
                    <h3 class="card-title text-lg mb-2">
                      <%= link_to test_suite.name, manual_testing_test_suite_path(test_suite), 
                          class: "hover:text-primary transition-colors" %>
                    </h3>
                    <% if test_suite.description.present? %>
                      <p class="text-base-content/70 text-sm line-clamp-2">
                        <%= truncate(test_suite.description, length: 100) %>
                      </p>
                    <% end %>
                  </div>
                  <div class="dropdown dropdown-end">
                    <div tabindex="0" role="button" class="btn btn-ghost btn-xs">
                      <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01" />
                      </svg>
                    </div>
                    <ul tabindex="0" class="dropdown-content z-[1] menu p-2 shadow bg-base-100 rounded-box w-52 border border-base-300">
                      <li>
                        <%= link_to manual_testing_test_suite_path(test_suite), class: "text-sm" do %>
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                          </svg>
                          View Details
                        <% end %>
                      </li>
                      <li>
                        <%= link_to edit_manual_testing_test_suite_path(test_suite), class: "text-sm" do %>
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
                          </svg>
                          Edit Suite
                        <% end %>
                      </li>
                      <li>
                        <%= link_to manual_testing_test_suite_path(test_suite), method: :delete,
                            class: "text-sm text-error",
                            data: {
                              turbo_method: :delete,
                              turbo_confirm: "Are you sure you want to delete this test suite? This will not delete the test cases, but will remove them from this suite."
                            } do %>
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
                          </svg>
                          Delete Suite
                        <% end %>
                      </li>
                    </ul>
                  </div>
                </div>

                <!-- Test Case Counts -->
                <div class="flex flex-wrap gap-2 mt-4">
                  <div class="badge badge-primary gap-1">
                    <span class="font-semibold"><%= test_suite.test_cases_count %></span> 
                    Total
                  </div>
                  <% if test_suite.draft_test_cases_count > 0 %>
                    <div class="badge badge-warning gap-1">
                      <span class="font-semibold"><%= test_suite.draft_test_cases_count %></span> 
                      Draft
                    </div>
                  <% end %>
                  <% if test_suite.ready_test_cases_count > 0 %>
                    <div class="badge badge-info gap-1">
                      <span class="font-semibold"><%= test_suite.ready_test_cases_count %></span> 
                      Ready
                    </div>
                  <% end %>
                  <% if test_suite.approved_test_cases_count > 0 %>
                    <div class="badge badge-success gap-1">
                      <span class="font-semibold"><%= test_suite.approved_test_cases_count %></span> 
                      Approved
                    </div>
                  <% end %>
                </div>

                <!-- Metadata -->
                <div class="flex items-center gap-4 mt-4 text-xs text-base-content/60 border-t border-base-200 pt-3">
                  <span class="flex items-center gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    <%= test_suite.user.full_name %>
                  </span>
                  <span class="flex items-center gap-1">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3a1 1 0 011-1h6a1 1 0 011 1v4h3a1 1 0 011 1v12a1 1 0 01-1 1H5a1 1 0 01-1-1V8a1 1 0 011-1h3z" />
                    </svg>
                    <%= time_ago_in_words(test_suite.created_at) %> ago
                  </span>
                </div>
              </div>
            </div>
          <% end %>
        </div>

        <!-- Pagination -->
        <% if @test_suites.respond_to?(:current_page) %>
          <div class="mt-8 flex justify-center">
            <%= paginate @test_suites %>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-16">
          <div class="max-w-md mx-auto">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 text-base-content/30 mx-auto mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
            </svg>
            <h3 class="text-lg font-semibold mb-2">No Test Suites Yet</h3>
            <p class="text-base-content/60 mb-6">Create your first test suite to start organizing your test cases</p>
            <%= link_to new_manual_testing_test_suite_path, 
                class: "btn btn-secondary gap-2" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4v16m8-8H4" />
              </svg>
              Create Test Suite
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>

<% content_for :title, "Dashboard" %>

<div class="space-y-6">
  <!-- Page header -->
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-base-content">Dashboard</h1>
      <p class="text-base-content/60 mt-1">Welcome back, <%= current_user.first_name %>!</p>
    </div>
    <div class="flex gap-2">
      <% if current_user.system_admin? %>
        <div class="badge badge-primary badge-lg">System Admin</div>
      <% end %>
    </div>
  </div>

  <!-- Key metrics -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <div class="stat bg-base-100 shadow rounded-box">
      <div class="stat-figure text-primary">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
        </svg>
      </div>
      <div class="stat-title">Total Users</div>
      <div class="stat-value text-primary"><%= @total_users %></div>
      <div class="stat-desc">All registered users</div>
    </div>

    <div class="stat bg-base-100 shadow rounded-box">
      <div class="stat-figure text-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 1 011 1v5m-4 0h4"></path>
        </svg>
      </div>
      <div class="stat-title">Organizations</div>
      <div class="stat-value text-secondary"><%= @total_organizations %></div>
      <div class="stat-desc">Active organizations</div>
    </div>

    <div class="stat bg-base-100 shadow rounded-box">
      <div class="stat-figure text-accent">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4M7.835 4.697a3.42 3.42 0 001.946-.806 3.42 3.42 0 014.438 0 3.42 3.42 0 001.946.806 3.42 3.42 0 013.138 3.138 3.42 3.42 0 00.806 1.946 3.42 3.42 0 010 4.438 3.42 3.42 0 00-.806 1.946 3.42 3.42 0 01-3.138 3.138 3.42 3.42 0 00-1.946.806 3.42 3.42 0 01-4.438 0 3.42 3.42 0 00-1.946-.806 3.42 3.42 0 01-3.138-3.138 3.42 3.42 0 00-.806-1.946 3.42 3.42 0 010-4.438 3.42 3.42 0 00.806-1.946 3.42 3.42 0 013.138-3.138z"></path>
        </svg>
      </div>
      <div class="stat-title">System Admins</div>
      <div class="stat-value text-accent"><%= @system_admin_count %></div>
      <div class="stat-desc">Platform administrators</div>
    </div>

    <div class="stat bg-base-100 shadow rounded-box">
      <div class="stat-figure text-info">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
        </svg>
      </div>
      <div class="stat-title">Regular Users</div>
      <div class="stat-value text-info"><%= @regular_user_count %></div>
      <div class="stat-desc">Active members</div>
    </div>
  </div>

  <!-- Charts -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- User registrations chart -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-primary">User Registrations (Last 30 days)</h2>
        <div class="h-64 flex items-center justify-center">
          <%= line_chart @user_registrations_by_day, 
                height: "250px", 
                colors: ["#3b82f6"],
                curve: false,
                library: { 
                  chart: { toolbar: { show: false } },
                  grid: { borderColor: "#e2e8f0" },
                  xaxis: { labels: { style: { colors: "#64748b" } } },
                  yaxis: { labels: { style: { colors: "#64748b" } } }
                } %>
        </div>
      </div>
    </div>

    <!-- Organizations chart -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-secondary">Organizations Created (Last 30 days)</h2>
        <div class="h-64 flex items-center justify-center">
          <%= area_chart @organizations_by_day, 
                height: "250px", 
                colors: ["#64748b"],
                library: { 
                  chart: { toolbar: { show: false } },
                  grid: { borderColor: "#e2e8f0" },
                  xaxis: { labels: { style: { colors: "#64748b" } } },
                  yaxis: { labels: { style: { colors: "#64748b" } } }
                } %>
        </div>
      </div>
    </div>
  </div>

  <!-- Role distribution -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-accent">Organization Role Distribution</h2>
      <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
        <div class="h-64 flex items-center justify-center">
          <%= pie_chart @organization_roles, 
                height: "250px",
                colors: ["#06d6a0", "#f59e0b", "#ef4444"],
                library: { 
                  chart: { toolbar: { show: false } },
                  legend: { position: "bottom" }
                } %>
        </div>
        <div class="flex flex-col justify-center space-y-4">
          <% @organization_roles.each_with_index do |(role, count), index| %>
            <div class="flex items-center justify-between p-4 bg-base-200 rounded-lg">
              <div class="flex items-center gap-3">
                <div class="w-4 h-4 rounded-full <%= ['bg-accent', 'bg-warning', 'bg-error'][index] %>"></div>
                <span class="font-medium capitalize"><%= role %></span>
              </div>
              <span class="font-bold text-lg"><%= count %></span>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Quick actions -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-primary">Quick Actions</h2>
      <div class="flex flex-wrap gap-4 mt-4">
        <% unless current_user.system_admin? %>
          <button class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6v6m0 0v6m0-6h6m-6 0H6" />
            </svg>
            Create Organization
          </button>
        <% end %>
        <button class="btn btn-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
          </svg>
          Manage Profile
        </button>
        <% if current_user.system_admin? %>
          <button class="btn btn-accent">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
            </svg>
            System Settings
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>

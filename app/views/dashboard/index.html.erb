<% content_for :title, "Dashboard" %>

<div class="space-y-6">
  <!-- Page header -->
  <div class="flex justify-between items-center">
    <div>
      <h1 class="text-3xl font-bold text-base-content">Dashboard</h1>
      <p class="text-base-content/60 mt-1">Welcome back, <%= current_user.first_name %>!</p>
    </div>
    <div class="flex gap-2">
      <%= link_to "Upload Tests", automated_testing_upload_path, class: "btn btn-primary" %>
      <%= link_to "View Results", automated_testing_results_path, class: "btn btn-secondary" %>
    </div>
  </div>

  <!-- Key metrics -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <div class="stat bg-base-100 shadow rounded-box">
      <div class="stat-figure text-primary">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div class="stat-title">Total Test Runs</div>
      <div class="stat-value text-primary"><%= @test_run_stats[:total] %></div>
      <div class="stat-desc">All your test runs</div>
    </div>

    <div class="stat bg-base-100 shadow rounded-box">
      <div class="stat-figure text-success">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div class="stat-title">Completed</div>
      <div class="stat-value text-success"><%= @test_run_stats[:completed] %></div>
      <div class="stat-desc">Successfully completed tests</div>
    </div>

    <div class="stat bg-base-100 shadow rounded-box">
      <div class="stat-figure text-error">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"></path>
        </svg>
      </div>
      <div class="stat-title">Failed</div>
      <div class="stat-value text-error"><%= @test_run_stats[:failed] %></div>
      <div class="stat-desc">Test runs with failures</div>
    </div>

    <div class="stat bg-base-100 shadow rounded-box">
      <div class="stat-figure text-warning">
        <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-8 h-8 stroke-current">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
      </div>
      <div class="stat-title">Success Rate</div>
      <div class="stat-value text-warning"><%= @overall_success_rate %>%</div>
      <div class="stat-desc">Overall test success rate</div>
    </div>
  </div>

  <!-- Quick Actions -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body items-center text-center">
        <div class="text-primary text-4xl mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-12 h-12 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12"></path>
          </svg>
        </div>
        <h2 class="card-title">Upload Test Results</h2>
        <p>Upload your JUnit or TestNG XML files to analyze test results</p>
        <div class="card-actions">
          <%= link_to "Upload", automated_testing_upload_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>

    <div class="card bg-base-100 shadow-xl">
      <div class="card-body items-center text-center">
        <div class="text-secondary text-4xl mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-12 h-12 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
          </svg>
        </div>
        <h2 class="card-title">View Test Results</h2>
        <p>Browse and analyze your automated test run results</p>
        <div class="card-actions">
          <%= link_to "View Results", automated_testing_test_runs_path, class: "btn btn-secondary" %>
        </div>
      </div>
    </div>

    <div class="card bg-base-100 shadow-xl">
      <div class="card-body items-center text-center">
        <div class="text-accent text-4xl mb-4">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="inline-block w-12 h-12 stroke-current">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v10a2 2 0 002 2h8a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2m-3 7h3m-3 4h3m-6-4h.01M9 16h.01"></path>
          </svg>
        </div>
        <h2 class="card-title">Manual Test Cases</h2>
        <p>Create and manage manual test cases for comprehensive testing</p>
        <div class="card-actions">
          <%= link_to "Manage Cases", manual_testing_test_cases_path, class: "btn btn-accent" %>
        </div>
      </div>
    </div>
  </div>

  <!-- Recent Activity -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <h2 class="card-title text-2xl mb-4">Recent Test Runs</h2>
      
      <% if @recent_test_runs.any? %>
        <div class="overflow-x-auto">
          <table class="table table-zebra">
            <thead>
              <tr>
                <th>Name</th>
                <th>Environment</th>
                <th>Status</th>
                <th>Created</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @recent_test_runs.each do |test_run| %>
                <tr>
                  <td class="font-semibold"><%= test_run.name %></td>
                  <td><span class="badge badge-outline"><%= test_run.environment %></span></td>
                  <td>
                    <% case test_run.status %>
                    <% when 'completed' %>
                      <span class="badge badge-success">Completed</span>
                    <% when 'failed' %>
                      <span class="badge badge-error">Failed</span>
                    <% when 'pending' %>
                      <span class="badge badge-warning">Pending</span>
                    <% when 'processing' %>
                      <span class="badge badge-info">Processing</span>
                    <% end %>
                  </td>
                  <td class="text-sm text-base-content/60"><%= time_ago_in_words(test_run.created_at) %> ago</td>
                  <td>
                    <%= link_to "View", automated_testing_result_path(test_run), class: "btn btn-sm btn-ghost" %>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      <% else %>
        <div class="text-center py-8">
          <div class="text-6xl mb-4">ðŸ“Š</div>
          <h3 class="text-xl font-semibold text-base-content/80 mb-2">No Test Runs Yet</h3>
          <p class="text-base-content/60 mb-6">Upload your first test results to get started</p>
          <%= link_to "Upload Test Results", automated_testing_upload_path, class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <!-- Test Environments Chart -->
  <% if @test_runs_by_environment.any? %>
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-2xl mb-4">Test Runs by Environment</h2>
        <%= pie_chart @test_runs_by_environment, 
            colors: ["#570df8", "#f000b8", "#37cdbe", "#ffb000"],
            height: "300px" %>
      </div>
    </div>
  <% end %>
</div>
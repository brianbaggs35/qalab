<% content_for :title, "Create Your Organization" %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary/10 via-base-200 to-secondary/10">
  <div class="card w-full max-w-2xl shadow-2xl bg-base-100">
    <div class="card-body">
      <!-- Header -->
      <div class="text-center mb-8">
        <div class="text-6xl mb-4">üè¢</div>
        <h1 class="text-3xl font-bold text-primary">Create Your Organization</h1>
        <% if @is_first_organization %>
          <p class="text-base-content/60 mt-2">You'll be the owner of this organization and can invite team members later.</p>
        <% else %>
          <p class="text-base-content/60 mt-2">Set up your organization to get started with QA Lab.</p>
        <% end %>
      </div>

      <!-- First Organization Notice -->
      <% if @is_first_organization %>
        <div class="alert alert-info mb-6">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div>
            <h3 class="font-bold">Welcome First User!</h3>
            <div class="text-xs">You're setting up the very first organization on this QA Lab instance. You'll automatically become the owner with full administrative privileges.</div>
          </div>
        </div>
      <% end %>

      <%= form_with model: @organization, url: onboarding_organization_path, local: true, class: "space-y-6" do |f| %>
        <% if @organization.errors.any? %>
          <div class="alert alert-error">
            <div>
              <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current flex-shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
              </svg>
              <div>
                <h3 class="font-bold">Please fix the following errors:</h3>
                <ul class="list-disc list-inside mt-2">
                  <% @organization.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        <% end %>

        <div class="form-control">
          <%= f.label :name, class: "label" do %>
            <span class="label-text font-medium text-lg">Organization Name</span>
          <% end %>
          <%= f.text_field :name, 
              class: "input input-bordered input-lg w-full", 
              placeholder: "e.g., Acme Corp, Development Team, QA Department", 
              required: true,
              autofocus: true %>
          <div class="label">
            <span class="label-text-alt">Choose a name that represents your team or company</span>
          </div>
        </div>

        <!-- Organization Benefits -->
        <div class="bg-base-200 rounded-lg p-6">
          <h3 class="font-semibold mb-4 flex items-center gap-2">
            <span class="text-xl">üéØ</span>
            What your organization gets:
          </h3>
          
          <div class="grid gap-3">
            <div class="flex items-center gap-3">
              <div class="w-6 h-6 bg-success text-success-content rounded-full flex items-center justify-center text-sm font-bold">‚úì</div>
              <span>Unlimited test uploads and results storage</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-6 h-6 bg-success text-success-content rounded-full flex items-center justify-center text-sm font-bold">‚úì</div>
              <span>Team member invitations and role management</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-6 h-6 bg-success text-success-content rounded-full flex items-center justify-center text-sm font-bold">‚úì</div>
              <span>Advanced analytics and reporting</span>
            </div>
            <div class="flex items-center gap-3">
              <div class="w-6 h-6 bg-success text-success-content rounded-full flex items-center justify-center text-sm font-bold">‚úì</div>
              <span>Custom workflows and configurations</span>
            </div>
          </div>
        </div>

        <div class="form-control mt-8">
          <%= f.submit "Create Organization", class: "btn btn-primary btn-lg w-full" %>
        </div>
      <% end %>

      <!-- Progress Indicator -->
      <div class="mt-8 flex justify-center">
        <div class="flex items-center gap-2">
          <div class="w-3 h-3 bg-primary rounded-full"></div>
          <div class="w-8 h-1 bg-primary"></div>
          <div class="w-3 h-3 bg-primary rounded-full"></div>
          <div class="w-8 h-1 bg-primary/30"></div>
          <div class="w-3 h-3 bg-primary/30 rounded-full"></div>
        </div>
      </div>
      
      <div class="text-center mt-2">
        <span class="text-sm text-base-content/60">Step 2 of 3</span>
      </div>
    </div>
  </div>
</div>
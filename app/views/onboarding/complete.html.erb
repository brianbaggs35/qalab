<% content_for :title, "Setup Complete!" %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary/10 via-base-200 to-secondary/10">
  <div class="card w-full max-w-2xl shadow-2xl bg-base-100">
    <div class="card-body">
      <!-- Success Header -->
      <div class="text-center mb-8">
        <div class="text-6xl mb-4">üöÄ</div>
        <h1 class="text-4xl font-bold text-success">You're All Set!</h1>

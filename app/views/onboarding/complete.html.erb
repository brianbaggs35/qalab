      </div>

      <!-- Organization Info -->
      <div class="bg-success/10 border border-success/20 rounded-lg p-6 mb-8">
        <div class="flex items-center gap-4 mb-4">
          <div class="avatar placeholder">
            <div class="bg-success text-success-content rounded-full w-16">
              <span class="text-2xl font-bold">
                <%= @organization.name[0]&.upcase %>
              </span>
            </div>
          </div>
          <div>
            <h2 class="text-2xl font-semibold"><%= @organization.name %></h2>
            <p class="text-base-content/60">Organization Owner: <%= current_user.full_name %></p>
          </div>
        </div>
        
        <div class="alert alert-success">
          <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          <span>Your organization has been created successfully!</span>
        </div>
      </div>

      <!-- Next Steps -->

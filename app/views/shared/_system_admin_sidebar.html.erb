<!-- System Admin Sidebar Navigation -->
<% if user_signed_in? && current_user.system_admin? %>
  <div class="drawer lg:drawer-open">
    <input id="system-admin-drawer" type="checkbox" class="drawer-toggle" />
    
    <!-- Page content -->
    <div class="drawer-content flex flex-col">
      <!-- Mobile sidebar toggle -->
      <div class="navbar lg:hidden bg-base-100 shadow-sm">
        <div class="flex-none">
          <label for="system-admin-drawer" aria-label="open sidebar" class="btn btn-square btn-ghost">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
          </label>
        </div>
        <div class="flex-1">
          <h1 class="text-xl font-bold text-error">System Administration</h1>
        </div>
        <div class="flex-none">
          <div class="dropdown dropdown-end">
            <div tabindex="0" role="button" class="btn btn-ghost btn-circle avatar placeholder">
              <div class="bg-error text-error-content rounded-full w-10">
                <span class="text-xs font-bold"><%= current_user.first_name&.first %><%= current_user.last_name&.first %></span>
              </div>
            </div>
            <ul tabindex="0" class="menu menu-sm dropdown-content mt-3 z-[1] p-2 shadow bg-base-100 rounded-box w-52">
              <li class="menu-title">
                <span><%= current_user.full_name %></span>
              </li>
              <li><%= link_to "Profile", edit_user_registration_path %></li>
              <li><%= link_to "Exit Admin", dashboard_path, class: "text-error" %></li>
              <li>
                <%= form_with url: destroy_user_session_path, method: :delete, local: true, class: "inline" do |f| %>
                  <%= f.submit "Sign out", class: "btn btn-ghost btn-sm p-0 m-0 bg-transparent border-none hover:bg-base-200 text-left w-full" %>
                <% end %>
              </li>
            </ul>
          </div>
        </div>
      </div>
      
      <!-- Flash messages for system admin -->
      <% if notice %>
        <div class="fixed top-4 right-4 z-50 w-full max-w-md">
          <div class="bg-gradient-to-r from-emerald-500 to-green-600 text-white rounded-lg shadow-xl border border-emerald-200/20 backdrop-blur-sm" data-controller="alert" data-alert-auto-close-value="<%= Rails.env.test? ? 'false' : 'true' %>">
            <div class="flex items-start p-4 gap-3">
              <div class="flex-shrink-0 mt-0.5">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium leading-relaxed"><%= notice %></p>
              </div>
              <button class="flex-shrink-0 ml-2 p-1 rounded-full hover:bg-white/20 transition-colors duration-200" data-action="click->alert#close" title="Close">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      <% end %>

      <% if alert %>
        <div class="fixed top-4 right-4 z-50 w-full max-w-md">
          <div class="bg-gradient-to-r from-red-500 to-rose-600 text-white rounded-lg shadow-xl border border-red-200/20 backdrop-blur-sm" data-controller="alert" data-alert-auto-close-value="<%= Rails.env.test? ? 'false' : 'true' %>">
            <div class="flex items-start p-4 gap-3">
              <div class="flex-shrink-0 mt-0.5">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
              </div>
              <div class="flex-1 min-w-0">
                <p class="text-sm font-medium leading-relaxed"><%= alert %></p>
              </div>
              <button class="flex-shrink-0 ml-2 p-1 rounded-full hover:bg-white/20 transition-colors duration-200" data-action="click->alert#close" title="Close">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
                </svg>
              </button>
            </div>
          </div>
        </div>
      <% end %>
      
      <!-- Main content -->
      <main class="flex-1 p-6">
        <%= yield %>
      </main>
    </div>
    
    <!-- Sidebar -->
    <div class="drawer-side">
      <label for="system-admin-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
      <aside class="min-h-full w-72 bg-gradient-to-b from-error/5 to-warning/5 shadow-xl">
        <!-- Sidebar Header -->
        <div class="bg-gradient-to-r from-error to-warning text-white p-6">
          <div class="flex items-center gap-3">
            <div class="text-3xl">üõ°Ô∏è</div>
            <div>
              <h2 class="text-lg font-bold">System Admin</h2>
              <p class="text-xs opacity-90"><%= current_user.full_name %></p>
            </div>
          </div>
        </div>
        
        <!-- Navigation Menu -->
        <ul class="menu p-4 space-y-2">
          <!-- Dashboard -->
          <li>
            <%= link_to system_admin_dashboard_path, 
                class: "group hover:bg-error/10 hover:text-error transition-colors duration-200 #{'bg-error/20 text-error font-semibold' if request.path == system_admin_dashboard_path}" do %>
              <div class="flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
                </svg>
                <span>Dashboard</span>
              </div>
            <% end %>
          </li>
          
          <div class="divider my-2"></div>
          
          <!-- Organizations Management -->
          <li>
            <details <%= "open" if request.path.start_with?("/system_admin/organizations") %>>
              <summary class="group hover:bg-primary/10 hover:text-primary transition-colors duration-200 #{'bg-primary/20 text-primary font-semibold' if request.path.start_with?('/system_admin/organizations')}">
                <div class="flex items-center gap-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4" />
                  </svg>
                  <span>Organizations</span>
                </div>
              </summary>
              <ul class="ml-8 mt-2 space-y-1">
                <li>
                  <%= link_to system_admin_organizations_path, 
                      class: "text-sm hover:text-primary transition-colors duration-200 #{'text-primary font-semibold' if request.path == system_admin_organizations_path}" do %>
                    üìã All Organizations
                  <% end %>
                </li>
                <li>
                  <%= link_to new_system_admin_organization_path, 
                      class: "text-sm hover:text-primary transition-colors duration-200 #{'text-primary font-semibold' if request.path == new_system_admin_organization_path}" do %>
                    ‚ûï Create Organization
                  <% end %>
                </li>
              </ul>
            </details>
          </li>
          
          <!-- Users Management -->
          <li>
            <details <%= "open" if request.path.start_with?("/system_admin/users") %>>
              <summary class="group hover:bg-secondary/10 hover:text-secondary transition-colors duration-200 #{'bg-secondary/20 text-secondary font-semibold' if request.path.start_with?('/system_admin/users')}">
                <div class="flex items-center gap-3">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
                  </svg>
                  <span>Users</span>
                </div>
              </summary>
              <ul class="ml-8 mt-2 space-y-1">
                <li>
                  <%= link_to system_admin_users_path, 
                      class: "text-sm hover:text-secondary transition-colors duration-200 #{'text-secondary font-semibold' if request.path == system_admin_users_path}" do %>
                    üë• All Users
                  <% end %>
                </li>
                <li>
                  <%= link_to new_system_admin_user_path, 
                      class: "text-sm hover:text-secondary transition-colors duration-200 #{'text-secondary font-semibold' if request.path == new_system_admin_user_path}" do %>
                    üë§ Create User
                  <% end %>
                </li>
                <li>
                  <%= link_to system_admin_users_path(role: "system_admin"), 
                      class: "text-sm hover:text-secondary transition-colors duration-200 #{'text-secondary font-semibold' if params[:role] == 'system_admin'}" do %>
                    üõ°Ô∏è System Admins
                  <% end %>
                </li>
              </ul>
            </details>
          </li>
          
          <div class="divider my-2"></div>
          
          <!-- System Tools -->
          <li class="menu-title">
            <span class="text-xs font-bold text-base-content/60 uppercase tracking-wide">System Tools</span>
          </li>
          
          <li>
            <%= link_to system_admin_logs_path, 
                class: "group hover:bg-info/10 hover:text-info transition-colors duration-200 #{'bg-info/20 text-info font-semibold' if request.path == system_admin_logs_path}" do %>
              <div class="flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                </svg>
                <span>System Logs</span>
              </div>
            <% end %>
          </li>
          
          <li>
            <%= link_to system_admin_system_settings_path, 
                class: "group hover:bg-info/10 hover:text-info transition-colors duration-200 #{'bg-info/20 text-info font-semibold' if request.path == system_admin_system_settings_path}" do %>
              <div class="flex items-center gap-3">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z" />
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                </svg>
                <span>System Settings</span>
              </div>
            <% end %>
          </li>
          
          <div class="divider my-2"></div>
          
          <!-- Quick Stats -->
          <li class="menu-title">
            <span class="text-xs font-bold text-base-content/60 uppercase tracking-wide">Quick Stats</span>
          </li>
          
          <li class="pointer-events-none">
            <div class="bg-base-200/50 rounded-lg p-3">
              <div class="flex justify-between items-center py-1">
                <span class="text-xs">Organizations</span>
                <span class="badge badge-primary badge-sm ml-2"><%= Organization.count %></span>
              </div>
            </div>
          </li>
          
          <li class="pointer-events-none">
            <div class="bg-base-200/50 rounded-lg p-3">
              <div class="flex justify-between items-center py-1">
                <span class="text-xs">Total Users</span>
                <span class="badge badge-secondary badge-sm ml-2"><%= User.count %></span>
              </div>
            </div>
          </li>
          
          <li class="pointer-events-none">
            <div class="bg-base-200/50 rounded-lg p-3">
              <div class="flex justify-between items-center py-1">
                <span class="text-xs">System Admins</span>
                <span class="badge badge-error badge-sm ml-2"><%= User.system_admins.count %></span>
              </div>
            </div>
          </li>
        </ul>
        
        <!-- Sidebar Footer -->
        <div class="absolute bottom-0 w-full p-4 bg-base-200/50 border-t border-base-300">
          <div class="flex items-center justify-between">
            <div class="text-xs text-base-content/70">
              <%= link_to "Exit Admin", dashboard_path, class: "link link-error hover:link-error/80" %>
            </div>
            <div class="text-xs text-base-content/70">
              v<%= Rails.version %>
            </div>
          </div>
          <div class="mt-2">
            <%= form_with url: destroy_user_session_path, method: :delete, local: true, class: "w-full" do |f| %>
              <%= f.submit "Logout", class: "btn btn-error btn-sm w-full" %>
            <% end %>
          </div>
        </div>
      </aside>
    </div>
  </div>
<% end %>
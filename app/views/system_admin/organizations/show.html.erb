<% content_for :title, "Organization Details - #{@organization.name}" %>

<div class="space-y-6">
  <!-- Header -->
  <div class="flex justify-between items-start">
    <div>
      <div class="breadcrumbs text-sm">
        <ul>
          <li><%= link_to "Organizations", system_admin_organizations_path, class: "link link-primary" %></li>
          <li><span class="text-base-content/70"><%= @organization.name %></span></li>
        </ul>
      </div>
      <h1 class="text-3xl font-bold text-primary flex items-center gap-3 mt-2">
        <div class="avatar placeholder">
          <div class="bg-primary text-primary-content rounded-full w-12">
            <span class="text-lg font-bold"><%= @organization.name.first(2).upcase %></span>
          </div>
        </div>
        <%= @organization.name %>
      </h1>
      <p class="text-base-content/70 mt-2">
        Organization ID: <%= @organization.id %> â€¢ Created <%= @organization.created_at.strftime("%B %d, %Y") %>
      </p>
    </div>
    <div class="flex gap-3">
      <%= link_to edit_system_admin_organization_path(@organization), class: "btn btn-secondary" do %>
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
        </svg>
        Edit Organization
      <% end %>
      <% if @organization.users.empty? %>
        <%= link_to system_admin_organization_path(@organization), method: :delete,
                    data: { confirm: "Are you sure you want to delete '#{@organization.name}'? This action cannot be undone." },
                    class: "btn btn-error" do %>
          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16" />
          </svg>
          Delete Organization
        <% end %>
      <% end %>
    </div>
  </div>

  <!-- Statistics Overview -->
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4">
    <div class="stat bg-base-100 shadow-lg rounded-lg border-l-4 border-l-primary">
      <div class="stat-figure text-primary">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197m13.5-9a2.5 2.5 0 11-5 0 2.5 2.5 0 015 0z" />
        </svg>
      </div>
      <div class="stat-title">Total Users</div>
      <div class="stat-value text-primary"><%= @organization_stats[:users_count] %></div>
      <div class="stat-desc">
        <%= @organization_stats[:owners_count] %>O, 
        <%= @organization_stats[:admins_count] %>A, 
        <%= @organization_stats[:members_count] %>M
      </div>
    </div>

    <div class="stat bg-base-100 shadow-lg rounded-lg border-l-4 border-l-secondary">
      <div class="stat-figure text-secondary">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z" />
        </svg>
      </div>
      <div class="stat-title">Test Runs</div>
      <div class="stat-value text-secondary"><%= @organization_stats[:test_runs_count] %></div>
      <div class="stat-desc">Total executed</div>
    </div>

    <div class="stat bg-base-100 shadow-lg rounded-lg border-l-4 border-l-accent">
      <div class="stat-figure text-accent">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
        </svg>
      </div>
      <div class="stat-title">Test Cases</div>
      <div class="stat-value text-accent"><%= @organization_stats[:test_cases_count] %></div>
      <div class="stat-desc">Created</div>
    </div>

    <div class="stat bg-base-100 shadow-lg rounded-lg border-l-4 border-l-success">
      <div class="stat-figure text-success">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
        </svg>
      </div>
      <div class="stat-title">Success Rate</div>
      <div class="stat-value text-success"><%= number_to_percentage(@organization_stats[:success_rate], precision: 1) %></div>
      <div class="stat-desc">Overall performance</div>
    </div>
  </div>

  <!-- Organization Details and Activity -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Organization Information -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-primary">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Organization Information
        </h2>
        
        <div class="space-y-4">
          <div>
            <label class="text-sm font-semibold text-base-content/70">Name</label>
            <p class="text-lg"><%= @organization.name %></p>
          </div>
          
          <div>
            <label class="text-sm font-semibold text-base-content/70">Created</label>
            <p><%= @organization.created_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
          
          <div>
            <label class="text-sm font-semibold text-base-content/70">Last Updated</label>
            <p><%= @organization.updated_at.strftime("%B %d, %Y at %I:%M %p") %></p>
          </div>
        </div>
      </div>
    </div>

    <!-- Recent Activity -->
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-secondary">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
          Recent Activity
        </h2>
        
        <div class="space-y-3">
          <% if @recent_activity[:recent_test_runs].any? %>
            <div>
              <h4 class="font-semibold text-sm text-base-content/70 mb-2">Recent Test Runs</h4>
              <% @recent_activity[:recent_test_runs].each do |test_run| %>
                <div class="flex justify-between items-center py-1">
                  <span class="text-sm"><%= test_run.name.truncate(30) %></span>
                  <span class="badge badge-<%= test_run.status == 'completed' ? 'success' : test_run.status == 'failed' ? 'error' : 'warning' %> badge-sm">
                    <%= test_run.status.humanize %>
                  </span>
                </div>
              <% end %>
            </div>
            <div class="divider my-2"></div>
          <% end %>
          
          <% if @recent_activity[:recent_users].any? %>
            <div>
              <h4 class="font-semibold text-sm text-base-content/70 mb-2">Recent Users</h4>
              <% @recent_activity[:recent_users].each do |user| %>
                <div class="flex justify-between items-center py-1">
                  <span class="text-sm"><%= "#{user.first_name} #{user.last_name}" %></span>
                  <span class="text-xs text-base-content/60">
                    <%= time_ago_in_words(user.created_at) %> ago
                  </span>
                </div>
              <% end %>
            </div>
          <% else %>
            <div class="text-center py-8 text-base-content/60">
              <svg xmlns="http://www.w3.org/2000/svg" class="h-12 w-12 mx-auto mb-3 opacity-30" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 13V6a2 2 0 00-2-2H6a2 2 0 00-2 2v7m16 0v5a2 2 0 01-2 2H6a2 2 0 01-2-2v-5m16 0h-2.586a1 1 0 00-.707.293l-2.414 2.414a1 1 0 01-.707.293h-3.172a1 1 0 01-.707-.293l-2.414-2.414A1 1 0 009.586 13H7" />
              </svg>
              <p>No recent activity</p>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>

  <!-- Users by Role -->
  <% if @users_by_role.any? %>
    <div class="card bg-base-100 shadow-xl">
      <div class="card-body">
        <h2 class="card-title text-accent">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z" />
          </svg>
          Organization Members
        </h2>
        
        <div class="overflow-x-auto">
          <table class="table table-zebra">
            <thead>
              <tr>
                <th>User</th>
                <th>Role</th>
                <th>Joined</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @users_by_role.each do |role, org_users| %>
                <% org_users.each do |org_user| %>
                  <tr>
                    <td>
                      <div class="flex items-center gap-3">
                        <div class="avatar placeholder">
                          <div class="bg-neutral text-neutral-content rounded-full w-8">
                            <span class="text-xs"><%= (org_user.user.name || org_user.user.email).first(2).upcase %></span>
                          </div>
                        </div>
                        <div>
                          <div class="font-bold"><%= "#{org_user.user.first_name} #{org_user.user.last_name}" %></div>
                          <div class="text-sm opacity-50"><%= org_user.user.email %></div>
                        </div>
                      </div>
                    </td>
                    <td>
                      <span class="badge badge-<%= org_user.role == 'owner' ? 'error' : org_user.role == 'admin' ? 'warning' : 'info' %>">
                        <%= org_user.role.humanize %>
                      </span>
                    </td>
                    <td><%= org_user.created_at.strftime("%b %d, %Y") %></td>
                    <td>
                      <div class="dropdown dropdown-end">
                        <div tabindex="0" role="button" class="btn btn-ghost btn-xs">
                          <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 5v.01M12 12v.01M12 19v.01M12 6a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2zm0 7a1 1 0 110-2 1 1 0 010 2z" />
                          </svg>
                        </div>
                        <ul tabindex="0" class="dropdown-content menu p-2 shadow bg-base-100 rounded-box w-44 z-50">
                          <li>
                            <%= link_to system_admin_user_path(org_user.user), class: "text-xs" do %>
                              View User
                            <% end %>
                          </li>
                          <% unless org_user.role == 'owner' && @organization.owners.count == 1 %>
                            <li>
                              <%= link_to remove_user_system_admin_organization_path(@organization), 
                                          method: :delete,
                                          params: { user_id: org_user.user.id },
                                          data: { confirm: "Remove #{org_user.user.first_name} #{org_user.user.last_name} from this organization?" },
                                          class: "text-xs text-error" do %>
                                Remove from Org
                              <% end %>
                            </li>
                          <% end %>
                        </ul>
                      </div>
                    </td>
                  </tr>
                <% end %>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  <% end %>
</div>v>
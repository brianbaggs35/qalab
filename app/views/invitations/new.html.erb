<% content_for :title, "Send Invitation" %>
<% content_for :breadcrumbs do %>
  <li>Organization</li>
  <li><%= link_to "Invitations", invitations_path %></li>
  <li class="text-primary font-semibold">Send Invitation</li>
<% end %>

<div class="min-h-screen flex items-center justify-center bg-gradient-to-br from-primary/5 via-base-200/50 to-secondary/5">
  <div class="card w-full max-w-lg shadow-2xl bg-base-100">
    <div class="card-body">
      <div class="text-center mb-6">
        <div class="text-5xl mb-4">ðŸ“§</div>
        <h1 class="text-2xl font-bold text-primary">Send Invitation</h1>
        <p class="text-base-content/60 mt-2">Invite a new member to <%= @organization&.name || 'your organization' %></p>
      </div>

      <%= form_with model: @invitation, local: true, class: "space-y-6" do |form| %>
        <% if @invitation.errors.any? %>
          <div class="alert alert-error">
            <svg xmlns="http://www.w3.org/2000/svg" class="stroke-current shrink-0 h-6 w-6" fill="none" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 14l2-2m0 0l2-2m-2 2l-2-2m2 2l2 2m7-2a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
            <div>
              <h3 class="font-bold">Please fix the following errors:</h3>
              <ul class="list-disc list-inside">
                <% @invitation.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          </div>
        <% end %>

        <!-- Email Address -->
        <div class="form-control">
          <%= form.label :email, class: "label" do %>
            <span class="label-text font-medium">Email Address</span>
            <span class="label-text-alt text-error">Required</span>
          <% end %>
          <%= form.email_field :email, 
              class: "input input-bordered w-full", 
              placeholder: "john.doe@company.com",
              required: true,
              autofocus: true %>
          <div class="label">
            <span class="label-text-alt">The person will receive an invitation email at this address</span>
          </div>
        </div>

        <!-- Role Selection -->
        <div class="form-control">
          <%= form.label :role, class: "label" do %>
            <span class="label-text font-medium">Role</span>
            <span class="label-text-alt">Choose carefully</span>
          <% end %>
          
          <div class="space-y-3">
            <% available_roles = [] %>
            <% if current_user.system_admin? || current_user.organization_users.find_by(organization: @organization)&.role == 'owner' %>
              <% available_roles = ['owner', 'admin', 'member'] %>
            <% elsif current_user.organization_users.find_by(organization: @organization)&.role == 'admin' %>
              <% available_roles = ['admin', 'member'] %>
            <% end %>

            <% if available_roles.include?('owner') %>
              <label class="cursor-pointer">
                <div class="flex items-center space-x-3 p-3 rounded-lg border border-base-300 hover:border-error hover:bg-error/5 transition-colors">
                  <%= form.radio_button :role, 'owner', class: "radio radio-error" %>
                  <div class="flex-1">
                    <div class="flex items-center gap-2">
                      <span class="font-semibold text-error">Organization Owner</span>
                      <div class="badge badge-error badge-sm">Full Access</div>
                    </div>
                    <p class="text-sm text-base-content/70 mt-1">Complete organization control, can manage all users and settings</p>
                  </div>
                </div>
              </label>
            <% end %>

            <% if available_roles.include?('admin') %>
              <label class="cursor-pointer">
                <div class="flex items-center space-x-3 p-3 rounded-lg border border-base-300 hover:border-warning hover:bg-warning/5 transition-colors">
                  <%= form.radio_button :role, 'admin', class: "radio radio-warning" %>
                  <div class="flex-1">
                    <div class="flex items-center gap-2">
                      <span class="font-semibold text-warning">Administrator</span>
                      <div class="badge badge-warning badge-sm">High Access</div>
                    </div>
                    <p class="text-sm text-base-content/70 mt-1">Can invite and manage members, access all organization features</p>
                  </div>
                </div>
              </label>
            <% end %>

            <% if available_roles.include?('member') %>
              <label class="cursor-pointer">
                <div class="flex items-center space-x-3 p-3 rounded-lg border border-base-300 hover:border-info hover:bg-info/5 transition-colors">
                  <%= form.radio_button :role, 'member', class: "radio radio-info", checked: true %>
                  <div class="flex-1">
                    <div class="flex items-center gap-2">
                      <span class="font-semibold text-info">Member</span>
                      <div class="badge badge-info badge-sm">Standard Access</div>
                    </div>
                    <p class="text-sm text-base-content/70 mt-1">Can use platform features, view and manage tests within the organization</p>
                  </div>
                </div>
              </label>
            <% end %>
          </div>
        </div>

        <!-- Information Box -->
        <div class="alert alert-info">
          <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" class="stroke-current shrink-0 w-6 h-6">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div class="text-sm">
            <p class="font-semibold">What happens next?</p>
            <ul class="mt-1 space-y-1">
              <li>â€¢ The invitee will receive a professional invitation email</li>
              <li>â€¢ They'll have 7 days to accept the invitation</li>
              <li>â€¢ Upon acceptance, they'll create their account and join your organization</li>
              <li>â€¢ You can track invitation status in the invitations list</li>
            </ul>
          </div>
        </div>

        <!-- Action Buttons -->
        <div class="flex gap-4 pt-4">
          <%= link_to invitations_path, class: "btn btn-outline flex-1" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
            </svg>
            Cancel
          <% end %>
          
          <%= form.submit "Send Invitation", class: "btn btn-primary flex-1" %>
        </div>
      <% end %>
    </div>
  </div>
</div>

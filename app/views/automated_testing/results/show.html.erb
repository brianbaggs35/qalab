              <span class="font-medium"><%= @test_run.created_at.strftime('%B %d, %Y at %I:%M %p') %></span>
            </div>
            
            <% duration = @test_run.results_summary.dig('duration') %>
            <% if duration.present? %>
              <div class="flex items-center gap-2">
                <span class="text-base-content/60">Duration:</span>
                <span class="font-medium"><%= duration %></span>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z" />
            </svg>
          <div class="flex gap-2">
            <%= link_to automated_testing_test_runs_path, class: "btn btn-ghost btn-sm" do %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18" />
              </svg>
              Back to Test Runs
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Test Results Summary Stats -->
  <div class="grid grid-cols-2 md:grid-cols-4 gap-6">
    <div class="card bg-gradient-to-br from-primary/5 to-primary/10 border border-primary/20">
      <div class="card-body items-center text-center p-4">
        <div class="stat-figure text-primary mb-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="text-2xl font-bold text-primary"><%= @test_run.total_tests %></div>
        <div class="text-sm text-primary/80 font-medium">Total Tests</div>
      </div>
    </div>

    <div class="card bg-gradient-to-br from-success/5 to-success/10 border border-success/20">
      <div class="card-body items-center text-center p-4">
        <div class="stat-figure text-success mb-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
          </svg>
        </div>
        <div class="text-2xl font-bold text-success"><%= @test_run.passed_tests %></div>
        <div class="text-sm text-success/80 font-medium">Passed</div>
      </div>
    </div>

    <div class="card bg-gradient-to-br from-error/5 to-error/10 border border-error/20">
      <div class="card-body items-center text-center p-4">
        <div class="stat-figure text-error mb-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
          </svg>
        </div>
        <div class="text-2xl font-bold text-error"><%= @test_run.failed_tests %></div>
        <div class="text-sm text-error/80 font-medium">Failed</div>
      </div>
    </div>

    <div class="card bg-gradient-to-br from-warning/5 to-warning/10 border border-warning/20">
      <div class="card-body items-center text-center p-4">
        <div class="stat-figure text-warning mb-2">
          <svg xmlns="http://www.w3.org/2000/svg" class="h-8 w-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
          </svg>
        </div>
        <div class="text-2xl font-bold text-warning"><%= @test_run.skipped_tests %></div>
        <div class="text-sm text-warning/80 font-medium">Skipped</div>
      </div>
    </div>
  </div>

  <!-- Individual Test Results -->
  <div class="card bg-base-100 shadow-xl">
    <div class="card-body">
      <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4 mb-6">
        <div class="flex items-center gap-3">
          <h2 class="card-title text-xl">Individual Test Results</h2>
          <% if @test_run.total_tests > 0 %>
            <div class="badge badge-outline">
              <% success_rate = @test_run.success_rate %>
              <%= success_rate.round(1) %>% Success Rate
            </div>
          <% end %>
        </div>
        <div class="text-sm text-base-content/60">
          <% if @test_results.any? %>
            Showing <%= @test_results.offset_value + 1 %>-<%= [@test_results.offset_value + @test_results.length, @test_results.total_count].min %> of <%= @test_results.total_count %> tests
          <% else %>
            No test results
          <% end %>
        </div>
      </div>

      <!-- Enhanced Search and Filter Bar -->
      <%= form_with url: automated_testing_result_path(@test_run), method: :get, class: "space-y-4 lg:space-y-0 lg:flex lg:items-end lg:gap-4 mb-6", local: true do |form| %>
        <div class="flex-1">
          <label class="label">
            <span class="label-text font-medium">Search Tests</span>
          </label>
          <%= form.text_field :test_search, placeholder: "Search test names or classes...", 
              class: "input input-bordered w-full", value: params[:test_search] %>
        </div>
        
        <div>
          <label class="label">
            <span class="label-text font-medium">Status Filter</span>
          </label>
          <%= form.select :test_status,
              options_for_select([
                ['All Statuses', ''],
                ['Passed', 'passed'],
                ['Failed', 'failed'],
                ['Error', 'error'],
                ['Skipped', 'skipped']
              ], params[:test_status]),
              {}, { class: "select select-bordered w-full lg:w-40" } %>
        </div>
        
        <div>
          <label class="label">
            <span class="label-text font-medium">Per Page</span>
          </label>
          <%= form.select :per_page,
              options_for_select([
                ['25 per page', '25'],
                ['50 per page', '50'],
                ['100 per page', '100']
              ], params[:per_page] || '25'),
              {}, { class: "select select-bordered w-full lg:w-32", onchange: "this.form.submit();" } %>
        </div>
        
        <div class="flex gap-2">
          <button type="submit" class="btn btn-primary">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
            </svg>
            Search
          </button>
          <% if params[:test_search].present? || params[:test_status].present? %>
            <%= link_to automated_testing_result_path(@test_run), class: "btn btn-ghost" %>
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12" />
              </svg>
              Clear
            <% end %>
        </div>
      <% end %>

      <% if @test_results.any? %>
        <!-- Individual Test Results Table -->
        <div class="overflow-x-auto">
          <table class="table table-hover">
            <thead>
              <tr>
                <th>Test Name</th>
                <th>Class</th>
                <th>Status</th>
                <th>Duration</th>
                <th>Message</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% @test_results.each do |test_result| %>
                <tr class="hover">
                  <td>
                    <div class="font-semibold text-sm"><%= test_result.name %></div>
                  </td>
                  <td>
                    <div class="text-sm text-base-content/70 max-w-xs truncate">
                      <%= test_result.classname %>
                    </div>
                  </td>
                  <td>
                    <% case test_result.status %>
                    <% when 'passed' %>
                      <div class="badge badge-success badge-sm">Passed</div>
                    <% when 'failed' %>
                      <div class="badge badge-error badge-sm">Failed</div>
                    <% when 'error' %>
                      <div class="badge badge-error badge-sm">Error</div>

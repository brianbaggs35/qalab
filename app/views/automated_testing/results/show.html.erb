<% content_for :title, "Test Results - #{@test_run.name}" %>
<% content_for :breadcrumbs do %>
  <li>Automated Testing</li>
  <li><%= link_to "Test Runs", automated_testing_test_runs_path %></li>
  <li class="text-primary font-semibold"><%= @test_run.name %></li>
<% end %>

<div class="space-y-6 test-run-details-content">
  <!-- Test Run Header and Switcher -->
  <div class="flex flex-col lg:flex-row lg:items-center lg:justify-between gap-4">
    <div class="flex-1">
      <h1 class="text-3xl font-bold text-primary mb-2">Test Results</h1>
      <p class="text-base-content/70">Viewing individual test results for this test run</p>
    </div>
    
    <!-- Test Run Switcher -->
    <div class="dropdown dropdown-end">
      <div tabindex="0" role="button" class="btn btn-outline gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7h12m0 0l-4 4m4-4l-4-4M4 7h1m0 0v12m0-12h3m-3 0V2" />
        </svg>
        Switch Test Run
      </div>
      <div tabindex="0" class="dropdown-content menu bg-base-100 rounded-box z-[1] w-80 p-2 shadow-xl mt-2 border max-h-64 overflow-y-auto">
        <% policy_scope(TestRun).includes(:test_results).recent.limit(10).each do |test_run| %>
          <li class="<%= 'bg-primary/10 rounded' if test_run.id == @test_run.id %>">
            <%= link_to automated_testing_result_path(test_run), class: "text-sm" do %>
              <div class="flex flex-col items-start">
                <div class="font-semibold truncate w-full"><%= test_run.name %></div>
                <div class="text-xs text-base-content/60 flex items-center gap-2">
                  <span><%= test_run.created_at.strftime('%b %d, %Y') %></span>
                  <% case test_run.status %>
                  <% when 'completed' %>
                    <div class="badge badge-success badge-xs">Completed</div>
                  <% when 'failed' %>
                    <div class="badge badge-error badge-xs">Failed</div>
                  <% when 'processing' %>
                    <div class="badge badge-warning badge-xs">Processing</div>
                  <% when 'pending' %>
                    <div class="badge badge-ghost badge-xs">Pending</div>
                  <% end %>
                  <span><%= test_run.total_tests %> tests</span>
                </div>
              </div>
            <% end %>
          </li>
        <% end %>
        <div class="divider my-1"></div>
        <li>
          <%= link_to automated_testing_test_runs_path, class: "text-sm text-primary" do %>
            <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
            </svg>
            View All Test Runs
          <% end %>
        </li>
      </div>
    </div>
  </div>

  <!-- Current Test Run Summary -->

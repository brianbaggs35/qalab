<!-- Test Result Detail Modal -->
<dialog id="test_result_detail_modal" class="modal">
  <div class="modal-box max-w-4xl h-5/6">
    <form method="dialog">
      <button class="btn btn-sm btn-circle btn-ghost absolute right-2 top-2">‚úï</button>
    </form>
    
    <div id="test_result_detail_content" class="space-y-4">
      <!-- Content will be loaded dynamically -->
      <div class="loading loading-spinner loading-md"></div>
      <p>Loading test result details...</p>
    </div>
  </div>
  <form method="dialog" class="modal-backdrop">
    <button>close</button>
  </form>
</dialog>

<script>
  function formatDuration(seconds) {
    if (!seconds || seconds <= 0) return "N/A";
    
    const s = parseFloat(seconds);
    
    if (s < 60) {
      return `${s.toFixed(3)}s`;
    } else if (s < 3600) {
      const minutes = Math.floor(s / 60);
      const remainingSeconds = s % 60;
      return `${minutes}m ${remainingSeconds.toFixed(3)}s`;
    } else {
      const hours = Math.floor(s / 3600);
      const remainingMinutes = Math.floor((s % 3600) / 60);
      const remainingSeconds = s % 60;
      return `${hours}h ${remainingMinutes}m ${remainingSeconds.toFixed(3)}s`;
    }
  }

  function showTestResultDetails(testRunId, testResultId) {
    const modal = document.getElementById('test_result_detail_modal');
    const content = document.getElementById('test_result_detail_content');
    
    // Show modal
    modal.showModal();
    
    // Load test result details via AJAX
    fetch(`/automated_testing/results/${testRunId}/test_results/${testResultId}`)
      .then(response => response.json())
      .then(data => {
        if (data.error) {
          content.innerHTML = `<p class="text-error">${data.error}</p>`;
          return;
        }
        
        let statusBadge;
        switch(data.status) {
          case 'passed':
            statusBadge = '<div class="badge badge-success">Passed</div>';
            break;
          case 'failed':
            statusBadge = '<div class="badge badge-error">Failed</div>';
            break;
          case 'error':
            statusBadge = '<div class="badge badge-error">Error</div>';
            break;
          case 'skipped':
            statusBadge = '<div class="badge badge-warning">Skipped</div>';
            break;
        }
        
        let html = `
          <div class="flex items-start justify-between mb-4">
            <div>
              <h3 class="font-bold text-lg">${data.name}</h3>
              <p class="text-sm text-base-content/60 font-mono">${data.classname || 'N/A'}</p>
            </div>
            ${statusBadge}
          </div>
          
          <div class="grid grid-cols-2 gap-4 mb-6">
            <div class="card bg-base-200 p-3">
              <div class="text-xs text-base-content/60 mb-1">Duration</div>
              <div class="font-semibold">${formatDuration(data.time)}</div>
            </div>
            <div class="card bg-base-200 p-3">
              <div class="text-xs text-base-content/60 mb-1">Test Run</div>
              <div class="font-semibold">${data.test_run_name || 'N/A'}</div>
            </div>
          </div>
        `;
        
        if (data.failure_message || data.failure_stacktrace) {
          html += `
            <div class="space-y-4">
              <div>
                <h4 class="font-semibold text-error mb-3 flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.964-.833-2.732 0L3.082 16.5c-.77.833.192 2.5 1.732 2.5z" />
                  </svg>
                  Failure Details
                </h4>
          `;
          
          if (data.failure_type) {
            html += `
              <div class="bg-error/5 border border-error/20 rounded-lg p-3">
                <div class="text-sm font-semibold text-error mb-1">Exception Type</div>
                <div class="font-mono text-sm text-error/90">${data.failure_type}</div>
              </div>
            `;
          }
          
          if (data.failure_message) {
            html += `
              <div class="bg-error/5 border border-error/20 rounded-lg p-3">
                <div class="text-sm font-semibold text-error mb-2">Error Message</div>
                <div class="font-mono text-sm bg-base-100 p-3 rounded border text-error/90" style="white-space: pre-wrap;">${data.failure_message}</div>
              </div>
            `;
          }
          
          if (data.failure_stacktrace) {
            html += `
              <div class="bg-error/5 border border-error/20 rounded-lg p-3">
                <div class="text-sm font-semibold text-error mb-2 flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z" />
                  </svg>
                  Stack Trace
                  <button onclick="copyToClipboard('stacktrace-${testResultId}')" class="btn btn-ghost btn-xs text-xs">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                    Copy
                  </button>
                </div>
                <div id="stacktrace-${testResultId}" class="console-style bg-gray-900 text-green-400 p-4 rounded-lg font-mono text-xs overflow-auto max-h-80 border" style="white-space: pre-line; line-height: 1.4; background: linear-gradient(135deg, #1a1a1a 0%, #2d2d2d 100%); color: #00ff88; font-family: 'Cascadia Code', 'Fira Code', 'JetBrains Mono', 'Source Code Pro', Consolas, monospace;">
${data.failure_stacktrace.split('\\n').map(line => {
  if (line.includes('at ') || line.includes('...')) {
    return `<span style="color: #fbbf24;">${line}</span>`;
  } else if (line.includes('Exception') || line.includes('Error')) {
    return `<span style="color: #ef4444; font-weight: bold;">${line}</span>`;
  } else if (line.includes('Caused by')) {
    return `<span style="color: #f59e0b; font-weight: bold;">${line}</span>`;
  } else {
    return `<span style="color: #9ca3af;">${line}</span>`;
  }
}).join('\\n')}
                </div>
              </div>
            `;
          }
          
          html += `
              </div>
            </div>
          `;
        }
        
        if (data.system_out || data.system_err) {
          html += '<div class="space-y-4 border-t pt-4">';
          html += '<h4 class="font-semibold text-base-content mb-3">System Output</h4>';
          
          if (data.system_out) {
            html += `
              <div class="bg-base-200/50 border border-base-300 rounded-lg p-3">
                <div class="text-sm font-semibold text-base-content mb-2 flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-info" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Standard Output
                  <button onclick="copyToClipboard('sysout-${testResultId}')" class="btn btn-ghost btn-xs text-xs">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                    Copy
                  </button>
                </div>
                <div id="sysout-${testResultId}" class="console-style bg-gray-800 text-green-300 p-3 rounded font-mono text-xs overflow-auto max-h-48" style="white-space: pre-line; background: #1f2937; color: #86efac; font-family: 'Cascadia Code', 'Fira Code', 'JetBrains Mono', 'Source Code Pro', Consolas, monospace;">${data.system_out}</div>
              </div>
            `;
          }
          
          if (data.system_err) {
            html += `
              <div class="bg-error/5 border border-error/20 rounded-lg p-3">
                <div class="text-sm font-semibold text-error mb-2 flex items-center gap-2">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4m0 4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z" />
                  </svg>
                  Standard Error
                  <button onclick="copyToClipboard('syserr-${testResultId}')" class="btn btn-ghost btn-xs text-xs">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z" />
                    </svg>
                    Copy
                  </button>
                </div>
                <div id="syserr-${testResultId}" class="console-style bg-red-900 text-red-200 p-3 rounded font-mono text-xs overflow-auto max-h-48" style="white-space: pre-line; background: #7f1d1d; color: #fecaca; font-family: 'Cascadia Code', 'Fira Code', 'JetBrains Mono', 'Source Code Pro', Consolas, monospace;">${data.system_err}</div>
              </div>
            `;
          }
          
          html += '</div>';
        }
        
        content.innerHTML = html;
      })
      .catch(error => {
        console.error('Error loading test result details:', error);
        content.innerHTML = '<p class="text-error">Error loading test result details.</p>';
      });
  }

  function copyToClipboard(elementId) {
    const element = document.getElementById(elementId);
    if (element) {
      navigator.clipboard.writeText(element.textContent).then(() => {
        // Show a brief success indication
        const button = event.target.closest('button');
        const originalText = button.innerHTML;
        button.innerHTML = '<svg xmlns="http://www.w3.org/2000/svg" class="h-3 w-3" fill="none" viewBox="0 0 24 24" stroke="currentColor"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" /></svg> Copied!';
        button.classList.add('text-success');
        setTimeout(() => {
          button.innerHTML = originalText;
          button.classList.remove('text-success');
        }, 2000);
      }).catch(err => {
        console.error('Could not copy text: ', err);
      });
    }
  }
</script>